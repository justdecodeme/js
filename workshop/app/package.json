      "allowElevation": false,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": true,
      "menuCategory": "xLab",
      "shortcutName": "Brick Breakout"
    }
  },
  "keywords": [
    "Whiteboard",
    "tosho",
    "book",
    "learning",
    "xLab"
  ],
