{
  "name": "brick_breakout",
  "version": "1.0.0",
  "description": "A game by xLab",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "brick_breakout.xlab.com",
    "productName": "brick_breakout",
    "copyright": "Copyright ©️ 2018 xLab",
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "nsis": {
